<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>


<% posts.forEach(function(post) { %>
    <div>
    
          <h1><%= post.title %></h1>
          <% if(post.length<=100){ %>
            <p><%= post.content %></p>
       <%   }else{  %>
       <p>
       <%= post.content.substring(0,100) + '...' %>
        <a href="/posts/<%=post.title.toLowerCase()%>">Read More</a>
       </p>
        

       <%   }  %>
           
        </div>
<% }) %>

        




<%- include("partials/footer") -%>
